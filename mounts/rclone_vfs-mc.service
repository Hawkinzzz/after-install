# /etc/systemd/system/rclone_vfs.service
[Unit]
Description=Rclone VFS Mount
After=network-online.target

[Service]
User=1000
Group=1000
Type=notify
ExecStartPre=/bin/sleep 10
ExecStart=/usr/bin/rclone mount \
  --allow-other \
  --buffer-size=64M \
  --dir-cache-time=168h \
  --drive-chunk-size=64M \
  --drive-skip-gdocs \
  --fast-list \
  --rc \
  --syslog \
  --timeout=10m \
  --umask=002 \
  --vfs-read-chunk-size-limit=2048M \
  --vfs-read-chunk-size=64M \
  -v \
  mc:medialibrary /mnt/remote/rclone.mc/medialibrary
ExecStop=/bin/fusermount -uz /mnt/remote/rclone.mc/medialibrary
Restart=on-abort
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=default.target
